{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "chrome",
            "request": "attach",
            "port": 3000,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/wwwroot",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
              ]
        },
    ]
}